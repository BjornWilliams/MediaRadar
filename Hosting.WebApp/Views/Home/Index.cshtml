@{
    ViewBag.Title = "Full List Advertisers";
}
<br />
<div class="container" id="content-details"></div>

<script id="fullList" type="text/ractive">
    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Welcome to MediaRadar!</h1>
        <p class="lead">
            Let's begin by downloading the Publication Ad Activities data. Please push the load data button to populate table below.
        </p>
        <p class="lead">
            A <b>full list advertisers</b>, including all object data (Month, Publication Id, Publication Name, Parent Company, Parent Company Id, Brand Name, Brand Id, Product Category, Ad Pages and Estimated Print Spend).
            This list should be sortable and paged with either client-side or server-side code. Default sort should be by brand name alphabetically.
        </p>
        <button class="btn btn-primary btn-lg" on-click="ondownload">Load Data</button>
    </header>
    <div>
        <table id="tbl-ads" class="table table-striped table-bordered" cellspacing="0" cellpadding="0">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" class="align-top">Ad Pages</th>
                    <th scope="col" class="align-top">Brand Id</th>
                    <th scope="col" class="align-top">Brand Name</th>
                    <th scope="col" class="align-top">Est Print Spend</th>
                    <th scope="col" class="align-top">Parent Company Id</th>
                    <th scope="col" class="align-top">Parent Company</th>
                    <th scope="col" class="align-top">Product Category</th>
                    <th scope="col" class="align-top">Publication Id</th>
                    <th scope="col" class="align-top">Publication Name</th>
                    <th scope="col" class="align-top">Month</th>
                </tr>
            </thead>
            <tbody>
                {{#each dataModel}}
                <tr>
                    <td>{{AdPages}}</td>
                    <td>{{BrandId}}</td>
                    <td>{{BrandName}}</td>
                    <td>{{EstPrintSpend}}</td>
                    <td>{{ParentCompanyId}}</td>
                    <td>{{ParentCompany}}</td>
                    <td>{{ProductCategory}}</td>
                    <td>{{PublicationId}}</td>
                    <td>{{PublicationName}}</td>
                    <td>{{Month}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{#if isLoading}}
    <div class="spinner-image">
        <img src="/Content/images/Loading.gif" alt="processing..." />
    </div>
    {{/if}}
</script>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            new media.PublicationService().loadAds("content-details", "fullList", "tbl-ads");
        });
    </script>
}